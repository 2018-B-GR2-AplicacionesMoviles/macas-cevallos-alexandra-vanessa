<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pantalla3">

    <View
            android:id="@+id/divider"
            android:layout_width="441dp"
            android:layout_height="13dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.222"/>
    <HorizontalScrollView
            android:layout_width="410dp"
            android:layout_height="206dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="211dp"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/descarga3"
                    tools:layout_editor_absoluteY="342dp"
                    tools:layout_editor_absoluteX="315dp" android:id="@+id/imageView8"/>
            <ImageView
                    android:layout_width="209dp"
                    android:layout_height="match_parent" app:srcCompat="@mipmap/descarga2"
                    tools:layout_editor_absoluteY="311dp"
                    tools:layout_editor_absoluteX="189dp" android:id="@+id/imageView7"/>
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent" app:srcCompat="@mipmap/decarga4" android:id="@+id/imageView9"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent" app:srcCompat="@mipmap/descarga1"
                    tools:layout_editor_absoluteY="342dp"
                    tools:layout_editor_absoluteX="45dp" android:id="@+id/imageView6"/>
            <ImageView
                    android:layout_width="221dp"
                    android:layout_height="match_parent" app:srcCompat="@mipmap/descarga5" android:id="@+id/imageView10"
                    android:layout_weight="1" android:adjustViewBounds="false"/>
        </LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>