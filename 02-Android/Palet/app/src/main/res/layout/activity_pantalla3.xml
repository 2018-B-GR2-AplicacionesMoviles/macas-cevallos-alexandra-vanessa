            app:layout_constraintHorizontal_bias="1.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="182dp"
                    android:layout_height="129dp" app:srcCompat="@mipmap/descarga5" android:id="@+id/imageView10"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="187dp"
                    android:layout_height="130dp" app:srcCompat="@mipmap/decarga4" android:id="@+id/imageView9"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/descarga1"
                    tools:layout_editor_absoluteY="342dp"
                    tools:layout_editor_absoluteX="45dp" android:id="@+id/imageView6"/>
            <ImageView
                    android:layout_width="135dp"
                    android:layout_height="129dp" app:srcCompat="@mipmap/descarga3"
                    tools:layout_editor_absoluteY="342dp"
                    tools:layout_editor_absoluteX="315dp" android:id="@+id/imageView8"/>
            <ImageView
                    android:layout_width="167dp"
                    android:layout_height="129dp" app:srcCompat="@mipmap/descarga2"
                    tools:layout_editor_absoluteY="311dp"
                    tools:layout_editor_absoluteX="189dp" android:id="@+id/imageView7"/>
        </LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>